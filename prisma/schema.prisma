// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Breed {
  id_breed Int    @id @default(autoincrement())
  name     String

  @@map(name: "breed")
  Pet Pet[]
}

model Color {
  id_color Int    @id @default(autoincrement())
  name     String

  @@map(name: "color")
  Pet Pet[]
}

model Sex {
  id_sex Int    @id @default(autoincrement())
  name   String

  @@map(name: "sex")
  Pet Pet[]
}

model Pet {
  id_pet      Int      @id @default(autoincrement())
  name        String
  description String
  special     Boolean  @default(false)
  age         Float
  breed       Breed    @relation(fields: [id_breed], references: [id_breed])
  id_breed    Int
  color       Color    @relation(fields: [id_color], references: [id_color])
  id_color    Int
  sex         Sex      @relation(fields: [id_sex], references: [id_sex])
  id_sex      Int
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt

  @@map(name: "pet")
}
